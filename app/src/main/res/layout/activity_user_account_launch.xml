<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.UserAccountLaunch">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/user_acc_toolbar"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:id="@+id/user_acc_toolbar_name"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/et_margin_start_end"
                android:gravity="center"
                android:text="Facebook"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/user_acc_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/et_margin_start_end"
                android:src="@drawable/ic_back" />

            <ImageView
                android:id="@+id/user_acc_menu_btn"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/et_margin_start_end"
                android:src="@drawable/ic_menu" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/user_acc_image_background"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/user_acc_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/account_logo_background">

        <ImageView
            android:id="@+id/user_acc_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:src="@drawable/ic_fb" />
    </RelativeLayout>


    <TextView
        android:id="@+id/user_acc_acc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_acc_image_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Facebook"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/user_acc_launch_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/user_acc_acc_name"
        android:layout_marginStart="@dimen/et_margin_start_end"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="@dimen/et_margin_start_end"
        android:background="@color/blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn1_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="LAUNCH"
            android:layout_centerInParent="true"
            android:gravity="center"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_right"
            android:layout_toRightOf="@id/btn1_text"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical|center_horizontal"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/user_acc_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/user_acc_launch_btn"
        android:layout_marginStart="@dimen/et_margin_start_end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/et_margin_start_end"
        android:background="@drawable/button_shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="LOGOUT"
            android:layout_centerInParent="true"
            android:gravity="center"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_logout"
            android:layout_toRightOf="@id/btn_text"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical|center_horizontal"
            />

    </RelativeLayout>


</RelativeLayout>