<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeApp.EditProfile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="109dp"
                android:layout_height="26dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/et_margin_start_end"
                android:src="@drawable/ic_logo" />


            <ImageView
                android:id="@+id/edit_profile_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/et_margin_start_end"
                android:src="@drawable/ic_back" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_profile_toolbar"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/edit_first_name_et"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="@dimen/et_margin_start_end"
                android:layout_marginEnd="@dimen/et_margin_vertical"
                android:layout_weight="1"
                android:background="@drawable/edit_text_shape"
                android:gravity="center"
                android:hint="First Name"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_last_name_et"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="@dimen/et_margin_vertical"
                android:layout_marginEnd="@dimen/et_margin_start_end"
                android:layout_weight="1"
                android:background="@drawable/edit_text_shape"
                android:gravity="center"
                android:hint="Last Name"
                android:textSize="18sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/edit_email_et"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/et_margin_start_end"
            android:layout_marginTop="@dimen/et_margin_vertical"
            android:layout_marginEnd="@dimen/et_margin_start_end"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:hint="Email"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_phone_et"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/et_margin_start_end"
            android:layout_marginTop="@dimen/et_margin_vertical"
            android:layout_marginEnd="@dimen/et_margin_start_end"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_national_id_et"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/et_margin_start_end"
            android:layout_marginTop="@dimen/et_margin_vertical"
            android:layout_marginEnd="@dimen/et_margin_start_end"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:hint="Civil ID"
            android:inputType="number"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_old_password_et"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/et_margin_start_end"
            android:layout_marginTop="@dimen/et_margin_vertical"
            android:layout_marginEnd="@dimen/et_margin_start_end"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:hint="Old Password"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_new_password_et"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/et_margin_start_end"
            android:layout_marginTop="@dimen/et_margin_vertical"
            android:layout_marginEnd="@dimen/et_margin_start_end"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:hint="New Password"
            android:textSize="18sp" />

        <Button
            android:id="@+id/edit_save_data_btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/et_margin_start_end"
            android:layout_marginEnd="@dimen/et_margin_start_end"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_shape"
            android:text="Save"
            android:textSize="22sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/edit_log_out_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

</RelativeLayout>